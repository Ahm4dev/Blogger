        height: 24px;
        animation: spin 1s linear infinite;
        margin: 0 auto;
    }

    @keyframes spin {
        to { 
            transform: rotate(360deg); 
        }
    }

    /* ==========================================================================
       State Styles
       ========================================================================== */
    .blog-pager { 
        display: none !important; 
    }

    .post-date { 
        display: none !important; 
    }

    /* Dark Mode Specific Styles */
    .dark-mode .menu-toggle {
        color: var(--text);
    }

    .dark-mode .menu-toggle:hover {
        background-color: transparent !important;
        transform: none !important;
    }

    .dark-mode .menu-toggle.active {
        transform: rotate(90deg) !important; 
        background-color: transparent !important;
    }

    .dark-mode .post-body,
    .dark-mode .post-body *:not(a):not(code):not(pre):not(span) {
        color: #E0E0E0 !important;
        background-color: transparent !important;
    }

    .dark-mode .post-body p,
    .dark-mode .post-body div:not(.code-container):not(.highlight),
    .dark-mode .post-body span:not(.keyword):not(.comment):not(.string),
    .dark-mode .post-body li,
    .dark-mode .post-body td { 
        color: #E0E0E0 !important; 
    }

    .dark-mode .post-body a { 
        color: #FFB74D !important; 
        text-decoration: underline; 
    }
    
    .dark-mode .post-body a:hover { 
        color: #FF9800 !important; 
        text-decoration: none; 
    }

    .dark-mode .post-body table {
        border: 1px solid #555 !important;
        background-color: #2A2A2A !important;
        margin: 1rem 0;
    }

    .dark-mode .post-body tr { 
        border-bottom: 1px solid #444 !important; 
    }

    .dark-mode .post-body th {
        background-color: #333 !important;
        color: #FFB74D !important;
        padding: 0.75rem;
        border: 1px solid #555 !important;
    }

    .dark-mode .post-body td {
        padding: 0.75rem;
        border: 1px solid #555 !important;
        background-color: #2A2A2A !important;
    }

    .dark-mode .post-body pre,
    .dark-mode .post-body code {
        background-color: #2D2D2D !important;
        color: #F8F8F2 !important;
        border: 1px solid #444 !important;
        border-radius: var(--border-radius);
    }

    .dark-mode .post-body blockquote {
        border-left: 4px solid #FF9800 !important;
        background-color: rgba(255, 152, 0, 0.1) !important;
        color: #E0E0E0 !important;
        padding: 1rem;
        margin: 1.5rem 0;
    }

    .dark-mode .post-body h1,
    .dark-mode .post-body h2,
    .dark-mode .post-body h3,
    .dark-mode .post-body h4,
    .dark-mode .post-body h5,
    .dark-mode .post-body h6 {
        color: #FFB74D !important;
        border-bottom: 1px solid #444;
        padding-bottom: 0.5rem;
    }

    .dark-mode .post-body strong,
    .dark-mode .post-body b { 
        color: #FFCC80 !important; 
    }

    .dark-mode .post-body em,
    .dark-mode .post-body i { 
        color: #80CBC4 !important; 
    }

    .dark-mode .post-body ul,
    .dark-mode .post-body ol { 
        color: #E0E0E0 !important; 
    }

    .dark-mode .post-body hr {
        border: none;
        border-top: 1px solid #555 !important;
        margin: 2rem 0;
    }

    .dark-mode .post-body img {
        opacity: 0.9;
        border: 1px solid #555 !important;
        border-radius: var(--border-radius);
    }

    .dark-mode .post-body img:hover { 
        opacity: 1; 
    }

    /* ==========================================================================
       Theme & Utility Classes
       ========================================================================== */
    .post-title-link {
        color: inherit;
        text-decoration: none;
        display: block;
        transition: color 0.2s ease;
    }

    /* ==========================================================================
       Responsive Design
       ========================================================================== */
    @media (max-width: 768px) {
        :root {
            --header-height: 70px;
            --sidebar-width: 280px;
        }
        
        nav {
            padding: 1rem;
        }
        
        main {
            padding: calc(var(--header-height) + 1rem) 1rem 1rem;
        }
        
        .post-card {
            padding: 1.5rem;
        }
        
        .nav-title {
            font-size: 1.2rem;
            max-width: 50vw;
        }
        
        .nav-links {
            gap: 1rem;
        }
        
        .mode-toggle {
            min-width: 100px;
            padding: 0.4rem 0.8rem;
            font-size: 0.8rem;
        }
        
        .categories-container {
            padding: 0 1rem;
            overflow-x: auto;
            justify-content: flex-start;
            scrollbar-width: none;
            -ms-overflow-style: none;
        }
        
        .categories-container::-webkit-scrollbar {
            display: none;
        }
        
        .category-btn {
            flex-shrink: 0;
            padding: 0.5rem 1rem;
            font-size: 0.9rem;
        }
    }

    @media (max-width: 480px) {
        :root {
            --header-height: 60px;
        }
        
        .nav-title {
            font-size: 1rem;
        }
        
        .post-card {
            padding: 1rem;
            margin-bottom: 1.5rem;
        }
        
        .post-title {
            font-size: 1.4rem;
        }
        
