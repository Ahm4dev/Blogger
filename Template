        font-size: 0.85rem;
        margin-top: 0.5rem;
    }
    
    .no-results.show, 
    .search-results-counter.show { 
        display: block; 
    }

    /* ==========================================================================
       Sidebar Links
       ========================================================================== */
    .sidebar-link {
        display: block;
        padding: 0.75rem 1rem;
