        background-color: var(--light);
        padding: 1rem 0;
        position: relative;
        z-index: 10;
    }
    
    .categories-container {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 0;
        border-bottom: 2px solid var(--primary);
        padding-bottom: 0.5rem;
        overflow-x: auto;
        scrollbar-width: none;
        -ms-overflow-style: none;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }
    
    .categories-container::-webkit-scrollbar {
        display: none;
    }
    
    .category-btn {
        padding: 0.5rem 1rem;
