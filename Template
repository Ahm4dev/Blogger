        color: var(--text);
        font-size: 0.9rem;
        transition: all 0.3s ease;
    }
    
    .search-input:focus {
        outline: none;
        border-color: var(--primary);
        box-shadow: 0 0 0 2px rgba(255, 109, 0, 0.2);
    }
    
    .no-results, .search-results-counter {
        padding: 1rem;
        color: var(--text-light);
        text-align: center;
        display: none;
        transition: all var(--transition-speed) ease;
    }
    
